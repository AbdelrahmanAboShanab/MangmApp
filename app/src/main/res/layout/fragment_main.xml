<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingBottom="20dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/portfolio"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <!--
           adjust text style
           adjust margins and paddings values-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/portfolioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:text="@string/portfolio_title"
                android:textAlignment="viewStart"
                android:textColor="#66708599"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/portfolioValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:textAlignment="viewStart"
                android:textColor="#5A5858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portfolioTitle"
                tools:text="0.00 EGP" />

            <TextView
                android:id="@+id/gramsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:text="@string/grams_title"
                android:textColor="#66708599"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portfolioValue" />

            <TextView
                android:id="@+id/gramsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textColor="#5A5858"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gramsTitle"
                tools:text="0 Grams" />

            <View
                android:id="@+id/verticalLine"
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:background="#E4E7EC"
                app:layout_constraintEnd_toStartOf="@id/pLTitle"
                app:layout_constraintStart_toEndOf="@id/gramsTitle"
                app:layout_constraintTop_toTopOf="@id/gramsTitle" />

            <TextView
                android:id="@+id/pLTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:text="@string/pl_title"
                android:textColor="#66708599"
                app:layout_constraintEnd_toEndOf="parent
"
                app:layout_constraintStart_toEndOf="@+id/verticalLine"
                app:layout_constraintTop_toBottomOf="@id/portfolioValue" />

            <TextView
                android:id="@+id/pLValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="4dp"
                android:textColor="#5A5858"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/pLTitle"
                app:layout_constraintTop_toBottomOf="@id/pLTitle"
                tools:text="0.00 EGP" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:elevation="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/portfolio"
        app:tabBackground="@drawable/tab_indicator"
        app:tabGravity="fill"
        app:tabIndicator="@null"
        app:tabSelectedTextColor="#3F3F3F"
        app:tabTextColor="#66708599" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tabLayout" />

    <Button
        android:id="@+id/sell_button"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#E9E9E9"
        android:text="@string/sell"
        android:textAllCaps="false"
        android:textColor="#939393"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buy_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buy_button"
        android:layout_width="172dp"
        android:layout_height="44dp"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#FE7805"
        android:text="@string/buy"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/sell_button"

        />


</androidx.constraintlayout.widget.ConstraintLayout>