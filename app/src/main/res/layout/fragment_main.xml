<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- add text in string files
    adjust text style
    adjust margins and paddings values-->

    <androidx.cardview.widget.CardView
        android:id="@+id/portfolio"
        android:layout_width= "match_parent"
        android:layout_height="122dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/portfolioTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:text="Portfolio Value"
                android:textAlignment="viewStart"
                android:textColor="#66708599"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/portfolioValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:textAlignment="viewStart"
                android:textColor="#5A5858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portfolioTitle"
                tools:text="0.00 EGP" />

            <TextView
                android:id="@+id/gramsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:text="Grams"
                android:textAlignment="viewStart"
                android:textColor="#66708599"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portfolioValue" />

            <TextView
                android:id="@+id/gramsValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:textAlignment="viewStart"
                android:textColor="#5A5858"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/gramsTitle"
                tools:text="0 Grams" />

            <View
                android:id="@+id/verticalLine"
                android:layout_width="2dp"
                android:layout_height="38dp"
                android:background="#E4E7EC"
                app:layout_constraintEnd_toStartOf="@id/pLTitle"
                app:layout_constraintStart_toEndOf="@id/gramsTitle"
                app:layout_constraintTop_toTopOf="@id/gramsTitle" />

            <TextView
                android:id="@+id/pLTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="16dp"
                android:text="P/L"
                android:textAlignment="viewStart"
                android:textColor="#66708599"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/portfolioValue" />

            <TextView
                android:id="@+id/pLValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginVertical="4dp"
                android:textAlignment="viewStart"
                android:textColor="#5A5858"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/pLTitle"
                tools:text="0.00 EGP" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>